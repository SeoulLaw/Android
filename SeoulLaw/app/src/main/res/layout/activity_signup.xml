<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pointColor"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/login_image" />
    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/app_logo"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@color/mainBackground">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/signup_id"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mainBackground"
            android:hint="아이디를 입력하세요"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_1"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/mainBackground">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/padlock" />

        <EditText
            android:id="@+id/signup_pw"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mainBackground"
            android:hint="비밀번호를 입력하세요"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/layout_2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/mainBackground">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/nickname" />

        <EditText
            android:id="@+id/signup_nickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mainBackground"
            android:hint="닉네임을 입력하세요"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/signup_complete"
        style="@style/signupButton"
        android:layout_below="@+id/layout_3"
        android:layout_marginTop="30dp"
        android:textSize="17sp"
        android:text="가입하기" />

    <Button
        android:id="@+id/signup_cancel"
        style="@style/cancelButton"
        android:layout_below="@id/signup_complete"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:text="가입취소" />
</RelativeLayout>